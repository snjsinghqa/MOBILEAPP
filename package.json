{
  "name": "mobile-automation-framework",
  "version": "1.0.0",
  "description": "Mobile Automation Framework with CodeceptJS and Appium for Android and iOS",
  "main": "codecept.conf.ts",
  "scripts": {
    "test:android:emulator": "cross-env PLATFORM=android DEVICE_TYPE=emulator codeceptjs run 'tests/*_test.ts' --steps",
    "test:android:real": "cross-env PLATFORM=android DEVICE_TYPE=real codeceptjs run 'tests/*_test.ts' --steps",
    "test:ios:simulator": "cross-env PLATFORM=ios DEVICE_TYPE=simulator codeceptjs run 'tests/*_test.ts' --steps",
    "test:ios:real": "cross-env PLATFORM=ios DEVICE_TYPE=real codeceptjs run 'tests/*_test.ts' --steps",
    "test:android:emulator:parallel": "cross-env PLATFORM=android DEVICE_TYPE=emulator AUTO_APPIUM=false codeceptjs run-workers 1",
    "test:ios:simulator:parallel": "cross-env PLATFORM=ios DEVICE_TYPE=simulator codeceptjs run-workers 3",
    "test:parallel": "concurrently -n \"Android,iOS\" -c \"green,blue\" \"cross-env AUTO_APPIUM=false PLATFORM=android DEVICE_TYPE=emulator APPIUM_PORT=4723 codeceptjs run 'tests/*_test.ts' --steps\" \"cross-env AUTO_APPIUM=false PLATFORM=ios DEVICE_TYPE=simulator APPIUM_PORT=4724 codeceptjs run 'tests/*_test.ts' --steps\"",
    "test:login": "cross-env PLATFORM=android DEVICE_TYPE=emulator codeceptjs run tests/login_test.ts --steps",
    "test:android:tags": "cross-env PLATFORM=android DEVICE_TYPE=emulator codeceptjs run 'tests/*_test.ts' --steps --grep",
    "test:ios:tags": "cross-env PLATFORM=ios DEVICE_TYPE=simulator codeceptjs run 'tests/*_test.ts' --steps --grep",
    "test:report": "open output/reports/test-report.html",
    "test:report:allure": "allure serve allure-results",
    "allure:generate": "allure generate allure-results -o output/allure-report --clean",
    "allure:open": "allure open output/allure-report",
    "allure:report": "npm run allure:generate && npm run allure:open",
    "allure:clean": "rm -rf allure-results/* output/allure-report",
    "clean:reports": "rm -rf output/reports/*",
    "clean:screenshots": "rm -rf output/step-screenshots/*",
    "clean:all": "rm -rf allure-results/* output/*",
    "test:dry": "codeceptjs dry-run",
    "appium:start": "appium --base-path /wd/hub",
    "appium:start:android": "appium --base-path /wd/hub --port 4723",
    "appium:start:ios": "appium --base-path /wd/hub --port 4724",
    "appium:start:parallel": "concurrently -n \"Appium-Android,Appium-iOS\" -c \"green,blue\" \"npm run appium:start:android\" \"npm run appium:start:ios\"",
    "appium:doctor": "appium-doctor",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "mobile",
    "automation",
    "testing",
    "appium",
    "codeceptjs",
    "android",
    "ios"
  ],
  "author": "Sanjay Singh Panwar",
  "license": "ISC",
  "devDependencies": {
    "@codeceptjs/helper": "^2.0.4",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "allure-codeceptjs": "^3.4.5",
    "allure-commandline": "^2.24.1",
    "appium-inspector-plugin": "^2026.1.3",
    "appium-xcuitest-driver": "^10.19.1",
    "codeceptjs": "^3.5.11",
    "codeceptjs-html-reporter": "^1.0.2",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^4.4.1",
    "mochawesome-report-generator": "^6.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "appium-doctor": "^1.15.1",
    "dotenv": "^16.3.1",
    "webdriverio": "^9.23.3"
  }
}
